{
  "name": "farcaster-chatgpt",
  "version": "0.0.1",
  "description": "Farcaster ChatGPT bot",
  "main": "dist/app.js",
  "repository": "https://github.com/backmeupplz/farcaster-chatgpt",
  "author": "backmeupplz <backmeupplz@gmail.com>",
  "license": "MIT",
  "type": "module",
  "scripts": {
    "distribute": "yarn build && node --experimental-modules --es-module-specifier-resolution=node dist/app.js",
    "start": "tsc-watch --skipLibCheck --onSuccess 'node --experimental-modules --es-module-specifier-resolution=node dist/app.js'",
    "build": "tsc --skipLibCheck",
    "pretty": "prettier --check src",
    "lint": "yarn pretty && eslint --max-warnings 0 --ext ts,tsx,json src"
  },
  "dependencies": {
    "@big-whale-labs/botcaster": "^0.0.15",
    "@standard-crypto/farcaster-js": "^5.4.0",
    "@typegoose/typegoose": "^10.0.0",
    "chatgpt": "^3.5.1",
    "dotenv": "^16.0.3",
    "envalid": "^7.3.1",
    "ethers": "^5.7.2",
    "mongoose": "^6.8.3",
    "puppeteer": "^19.4.1"
  },
  "devDependencies": {
    "@types/node": "^18.11.18",
    "@typescript-eslint/eslint-plugin": "^5.48.0",
    "@typescript-eslint/parser": "^5.48.0",
    "eslint": "^8.31.0",
    "eslint-config-prettier": "^8.6.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-sort-imports-es6-autofix": "^0.6.0",
    "prettier": "^2.8.2",
    "tsc-watch": "^6.0.0",
    "typescript": "^4.9.4"
  },
  "packageManager": "yarn@3.3.1"
}
